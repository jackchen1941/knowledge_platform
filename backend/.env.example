# Application Configuration
APP_NAME="Knowledge Management Platform"
DEBUG=true
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./knowledge_platform.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/knowledge_platform
# DATABASE_URL=mysql+aiomysql://user:password@localhost/knowledge_platform

# Database Connection Pool Settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Database Security Settings
DATABASE_SSL_MODE=
DATABASE_SSL_CERT=
DATABASE_SSL_KEY=
DATABASE_SSL_CA=

# Database Connection Timeouts
DATABASE_CONNECTION_TIMEOUT=30
DATABASE_QUERY_TIMEOUT=60
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=1

# MongoDB Configuration (Optional)
MONGODB_URL=
MONGODB_DATABASE=knowledge_platform

# Default Admin User (for initial setup)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=

# External Platform APIs (Optional)
CSDN_API_KEY=
NOTION_API_KEY=
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60